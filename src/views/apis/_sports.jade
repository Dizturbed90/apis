extends ../shared/_endpoint

block endpointvars
  - var shortname = 'sports'
  - var title = 'Sport events in Iceland'
  - var icon = 'soccer-ball-o'

block sources
  h4
    | Sources:&nbsp;
    a(href='http://ksi.is' target="_blank") KSÍ
    |  and&nbsp;
    a(href='http://hsi.is' target="_blank") HSÍ

block endpoints
  box.light.endpoint.disabled
    +disabledtitlebar('get','/sports/:sport')
    .content
      p Get events for icelandic football and/or handball

      h5.params(toggle-next) Parameters
      dl.params
        dt.required /:sport
        dd Which sport events to get (football|handball)

      h5.response(toggle-next) Response (no sport)
      pre.response: code.json.
        {
          "results": [
            {
              "info": "This is an api for Ielandic sports events",
